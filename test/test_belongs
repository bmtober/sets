. assertion

PATH="../:$PATH"

echo "Testing belongs"

[[ -d results ]] || mkdir results

../belongs "milk" data/A > results/belongs.1
../belongs "milk" data/B > results/belongs.2
../belongs "milk" data/C > results/belongs.3
../belongs "milk" data/E > results/belongs.4
../belongs "mil"  data/A > results/belongs.5

echo
assert 'diff expected/belongs.1 results/belongs.1 &> /dev/null'
assert 'diff expected/belongs.2 results/belongs.2 &> /dev/null'
assert 'diff expected/belongs.3 results/belongs.3 &> /dev/null'
assert 'diff expected/belongs.4 results/belongs.4 &> /dev/null'
assert 'diff expected/belongs.5 results/belongs.5 &> /dev/null'

echo
echo "PASS: ${success_count}"
echo "FAIL: ${failure_count}"

